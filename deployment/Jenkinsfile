pipeline {
    agent {
        dockerfile {
                filename 'Dockerfile.build'
                dir './deployment/appBuild'
                label 'appgate-calculator'
            }
    }
    stages {
        stage('Build') {
            steps {
                sh '''
			./mvnw -B -DskipTests clean package
			cp -f ./target/*.jar ./deployment/appBuild/
                    '''   
            }
        }
    }
}
